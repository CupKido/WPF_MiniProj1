<Window x:Class="PL.WPF.LinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="281,10,0,0" TextWrapping="Wrap" Text="Lines" VerticalAlignment="Top" Height="50" Width="94" FontSize="36"/>
        <ListView x:Name="LinesList" HorizontalAlignment="Left" Height="353" Margin="0,65,0,0" VerticalAlignment="Top" Width="657">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Line number" Width="auto"  DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>

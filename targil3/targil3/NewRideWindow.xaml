<Window x:Class="targil3B.NewRideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:targil3B"
        mc:Ignorable="d"
        Title="AddRideWin" Height="400" Width="640">
    <Grid>
        <Label x:Name="label" Content="Go for a Ride" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="34"/>
        <TextBox Name="kmToGo" KeyDown="EnterRide" HorizontalAlignment="Left"  Width="178" Margin="283,166,172.6,163.4" TextWrapping="Wrap" Text="" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="kmtogoLabel" Content="KM to go:" HorizontalAlignment="Center" Margin="181,166,350.6,163.4" FontSize="18" Width="102" />
        <Button x:Name="go" Content="GO!"  Click="AddRide" HorizontalAlignment="Left"  Margin="369,257,172.6,85.4" Width="92" Height="28"/>
        <Label x:Name="GazLabel" Content="Gaz Amount:" HorizontalAlignment="Center" Margin="163,100,355.6,229.4" FontSize="18" Width="115" />
        <TextBlock x:Name="GazAmount" TextAlignment="Left" HorizontalAlignment="Left"  Width="178" Margin="283,106,0,229.4" TextWrapping="Wrap" FontSize="18"/>
    </Grid>
</Window>

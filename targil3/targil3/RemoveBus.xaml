        <Label Name="addbus" Content="add new bus to the system" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="96" Margin="0,1,0,0" VerticalAlignment="Top" Width="794" FontSize="40" FontWeight="Bold" FontStyle="Italic"/>

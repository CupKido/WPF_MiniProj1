        <TextBox Name="license_num" KeyDown="EnterRemove" HorizontalAlignment="Left" Height="33" Margin="386,167,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="159" FontWeight="Bold" FontSize="20"/>
